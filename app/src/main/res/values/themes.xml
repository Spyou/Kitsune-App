<resources>

    <style name="Theme.GraphQLAnilist" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:unfocusedMonthDateColor">@color/darkBlue</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:statusBarColor">#25B8B8B8</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_theme</item>
        <item name="colorSecondaryVariant">@color/green_theme</item>
        <item name="colorOnSecondary">@color/colorPrimaryLight</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:textColorHint">@color/grayTextColor</item>
        <item name="android:textColor">@color/textColor</item>
        <!--        <item name="fgl_scrim_color">#000000</item>-->
        <!--        <item name="fgl_scrim_amount">0.15</item>-->
        <!--        <item name="fgl_parallax_factor">1.3</item>-->
        <!--        <item name="fgl_anim_duration">500</item>-->
        <!--        <item name="fgl_elevation">3dp</item>-->
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="windowSplashScreenBackground">@color/primaryBlackBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:colorBackground">@color/colorPrimaryDark
        </item>        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/PopupMenuTheme</item>
    </style>
    <style name="PopupMenuTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="FontRegularClickable">
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.GraphQLAnilist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ButtonPrimaryBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.GraphQLAnilist.Detail">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@color/status</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:ambientShadowAlpha">0.08</item>
        <item name="android:spotShadowAlpha">0.08</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="closeIconTint">@color/white</item>
    </style>
</resources>